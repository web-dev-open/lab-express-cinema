<div class="row justify-space-between">
    <div class="col-md-4">
        <img src="{{image}}" alt="movie cover image">
    </div>
    <div class="col-md-6">
        <a href="/movies" class="btn btn-primary">Back to the movies list</a>
        <h4>{{title}}</h4>
        <h6>Director: {{director}}</h6>
        <p>Stars:</p>
        <ul>
            {{#each stars}}
                <li>
                   {{this}} 
                </li>                
            {{/each}}
        </ul>
        <p>{{description}}</p>
        <p>
        {{#each showtimes}}
            <span>{{this}} |</span>            
        {{/each}}
        </p>
    </div>
</div>


