<!-- views/movies.hbs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{title}}</title>
    
</head>
<body>
    <h1>All Movies</h1>
    <ul>
        {{#each movies}}
            <li>
                <img src="{{this.image}}" alt="{{this.title}}" width="100">
                <h2>{{this.title}}</h2>
                <a href="/movies/{{this._id}}">See more</a>
            </li>
        {{/each}}
    </ul>
</body>
</html>
