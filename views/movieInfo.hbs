<div class="containerMovie">

  <div>

    <img src={{movie.image}} />
    <a href="/movies">Go back</a>
    <h3>{{movie.title}}</h3>
    <h3>Director: {{movie.director}}</h3>
    <h4>Stars</h4>
    <ul>
      {{#each movie.stars}}
        <li>{{this}}</li>
      {{/each}}
    </ul>

    <p>{{movie.description}}</p>
    <p>

      {{#each movie.showtimes}}
        {{this}}
        |
      {{/each}}
    </p>
  </div>

</div>